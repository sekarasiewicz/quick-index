FROM oven/bun:1

WORKDIR /app

# Copy package files
COPY package.json bun.lock ./

# Install dependencies
RUN bun install

# Expose port for Vite dev server
EXPOSE 5173

# For development, we'll mount the code as a volume
# and run the Vite dev server
CMD ["bun", "run", "dev", "--host", "0.0.0.0", "--port", "5173"] 